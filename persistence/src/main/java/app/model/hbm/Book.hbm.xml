<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="app.model">
    <class name="Book" table="books">
        <id name="id" column="id">
            <generator class="increment" />
        </id>

        <property name="title" type="string">
            <column name="title" />
        </property>
        <property name="description" type="string">
            <column name="description" />
        </property>
        <property name="avatar" type="string">
            <column name="avatar" />
        </property>
        <property name="pages" type="integer">
            <column name="pages" />
        </property>
        <property name="price" type="big_decimal">
            <column name="price" />
        </property>
        <property name="available" type="integer">
            <column name="available" />
        </property>
        <property name="status" type="boolean">
            <column name="status" />
        </property>

        <many-to-one name="author" class="Author" lazy="no-proxy">
            <column name="author" not-null="true" />
        </many-to-one>

        <many-to-one name="category" class="Category" lazy="no-proxy">
            <column name="category" not-null="true" />
        </many-to-one>

        <many-to-one name="producer" class="Producer" lazy="no-proxy">
            <column name="producer" not-null="true" />
        </many-to-one>


        <list name = "reviews" lazy="false" fetch="join">
            <key column = "id" not-null="true"/>
            <list-index column = "id"/>
            <one-to-many class="Review"/>
        </list>
    </class>
</hibernate-mapping>